<div class="row">
  <div class="col-md-12">
    <h1>ブログ記事編集</h1>
    <%= render 'form' %>
  </div>
</div>
<div class="col-md-12">
  <h1>編集</h1>
  <%= form_for @product do |f| %>
    <div class="form-group">
      <%= f.label "作品名" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "カテゴリ" %>
      <%= f.text_field :category, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "詳細" %>
      <%= f.text_area :detail, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "最低価格" %>
      <%= f.text_field :lowest_price, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "イメージ画像" %>
      <%= f.text_field :image_url, class: "form-control" %>
    </div>
    <%= f.submit '編集する', class: "btn btn-primary" %>
  <% end %>
</div>
